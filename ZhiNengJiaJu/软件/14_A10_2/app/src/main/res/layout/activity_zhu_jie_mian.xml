<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_DiBu_DaoHangLan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_DiBu_DaoHangLan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <RadioGroup
            android:id="@+id/rg_DiBu_DaoHangLan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/rb_ZhaoMing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_zhao_ming"
                android:gravity="center"
                android:text="@string/ZhaoMing"
                android:textColor="@drawable/selector_xuan_ze_qi"
                android:textSize="@dimen/ZiTi_DaXiao" />

            <RadioButton
                android:id="@+id/rb_NuanTong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_nuan_tong"
                android:gravity="center"
                android:text="@string/NuanTong"
                android:textColor="@drawable/selector_xuan_ze_qi"
                android:textSize="@dimen/ZiTi_DaXiao" />

            <RadioButton
                android:id="@+id/rb_AnFang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_an_fang"
                android:gravity="center"
                android:text="@string/AnFang"
                android:textColor="@drawable/selector_xuan_ze_qi"
                android:textSize="@dimen/ZiTi_DaXiao" />
        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>